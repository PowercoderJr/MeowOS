<Window x:Class="MeowOS.AskPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MeowOS"
        mc:Ignorable="d"
        Title="Запрос пароля" Height="120" Width="300" ResizeMode="NoResize">
    <Grid FocusManager.FocusedElement="{Binding ElementName=nameEdit}">
        <Label Content="Введите пароль:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="passEdit" HorizontalAlignment="Left" Height="23" Margin="123,12,0,0" VerticalAlignment="Top" Width="151"/>
        <Button Name="okBtn" Content="ОК" HorizontalAlignment="Center" Margin="-100,0,0,20" VerticalAlignment="Bottom" Width="75" Click="okClick"/>
        <Button Name="cancelBtn" Content="Отмена" HorizontalAlignment="Center" Margin="100,0,0,20" VerticalAlignment="Bottom" Width="75" Click="cancelClick"/>
    </Grid>
</Window>
