<UserControl x:Class="HlwnOS.FileSystem.FileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HlwnOS.FileSystem"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="100"
             MouseLeftButtonDown="onLMBDown">
    <StackPanel Name="panel" VerticalAlignment="Top" HorizontalAlignment="Center" Height="90" Width="90" Margin="5,5,5,5">
        <Image Name="iconImg" Stretch="Fill" Height="50" Width="50" Margin="0,10,0,0"/>
        <Label Name="nameLabel" Margin="0,5,0,0" HorizontalContentAlignment="Center"/>
    </StackPanel>
</UserControl>
